  <select id="selectAllCT" resultMap="tCoursesAll">
  	select t4.c_id as c_id,t2.*,t3.*,t4.*,t1.tId, t1.content as content  from t_courses t1,courses t2,classes t3,user t4
  	where t1.co_id=t2.co_id and t1.cl_id=t3.cl_id and t1.username=t4.username and t1.state!='0'   order by
		t2.co_total desc
  </select>
  <select id="selectAllbyCid" resultMap="tCoursesAll"  parameterType="java.lang.Integer">
  	select t4.c_id as c_id,t2.*,t3.*,t4.*,t1.tId, t1.content as content  from t_courses t1,courses t2,classes t3,user t4
  	where t1.co_id=t2.co_id and t1.cl_id=t3.cl_id and t1.username=t4.username   and t1.state!='0'  and t4.c_id= #{cId,jdbcType=INTEGER}  order by
		t2.co_total desc
  </select>

